@model booking_car_app.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<form asp-area="" asp-controller="Home" asp-action="ChangePassword" method="post" asp-antiforgery="true">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="card">
                <div class="card-header">
                    <h2>Đổi mật khẩu</h2>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordConfirm"></label>
                        <input class="form-control" asp-for="PasswordConfirm" autofocus>
                    </div>
                    <button class="btn btn-primary" name="button" value="login">Thay đổi</button>

                </div>
            </div>
        </div>
    </div>

</form>

