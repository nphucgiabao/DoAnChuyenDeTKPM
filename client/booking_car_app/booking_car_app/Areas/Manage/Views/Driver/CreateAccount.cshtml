@model booking_car_app.Areas.Manage.Models.AccountViewModel

@{
    Layout = null;
}

<form onsubmit="return createAccount(this)" asp-antiforgery="true" method="post">
    <input asp-for="OId" type="hidden" />
    <input asp-for="FullName" type="hidden" />
    <input asp-for="PhoneNumber" type="hidden" />
    <div class="modal fade" id="exampleModalLong" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalLongTitle">Tạo tài khoản</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="UserName">Tên tài khoản (*):</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Mật khẩu (*):</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                    <button type="submit" class="btn btn-primary" data-add="modal">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</form>
